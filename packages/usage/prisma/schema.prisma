datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator godspeed {
  provider = "node ../../node_modules/godspeed-crud-api-generator"
  output   = "../auto-generated-crud"
}


model Comment {
  id  Int @id @default(autoincrement())
  text String?
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  // role    Role     @default(USER)
  // posts   Post[]
  // profile Profile?
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  // user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Post {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  title      String
  published  Boolean    @default(false)
  // author     User       @relation(fields: [authorId], references: [id])
  authorId   Int
  // categories Category[] @relation(references: [id])
  slug     String    @unique
  body     String
  description String?
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  // posts Post[] @relation(references: [id])
}

enum Role {
  USER
  ADMIN
}