datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator godspeed {
  provider = "node ../../node_modules/godspeed-crud-api-generator"
  output   = "../auto-generated-crud"
}

model Comment {
  id  Int @id @default(autoincrement())
  text String?
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
  title     String   @db.VarChar(255)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

enum Role {
  USER
  ADMIN
}